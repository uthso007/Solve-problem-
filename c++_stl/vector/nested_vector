#include <bits/stdc++.h>
using namespace std;
void print(vector<pair<int, int>> &v)
{
    cout << "The size of the pair is " << v.size() << endl;
    for (int i = 0; i < v.size(); i++)
    {
        cout << v[i].first << " " << v[i].second << endl;
    }
}
int main()
{
    vector<pair<int, int>> v;
    cout << "Enter the amount of the size of the vector " << endl;
    int n;
    cin >> n;
    // v = {{1, 2}, {3, 4}, {5, 6}};
    for (int i = 0; i < n; i++)
    {
        int x, y;
        cin >> x >> y;
        v.push_back({x, y});
    }
    print(v);
}
